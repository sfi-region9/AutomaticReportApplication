<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout

        xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/fragment_news_rootview"

        xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:tools="http://schemas.android.com/tools"

        android:layout_width="match_parent"

        android:layout_height="match_parent"

        tools:context="uss.versailles.ara.fragments.ReportFragment"

        android:gravity="center"

>


    <EditText
            android:id="@+id/tarea"
            android:layout_width="348dp"
            android:layout_height="461dp"
            android:inputType="text|textMultiLine"
            android:gravity="top" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintVertical_bias="0.221"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>

    <Button
            android:text="Send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sendreport" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"/>
    <Button
            android:text="Edit Mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editmode" app:layout_constraintStart_toEndOf="@+id/sendreport"
            android:layout_marginStart="68dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"/>
</android.support.constraint.ConstraintLayout>